{
	"trailingComma": "all",
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"useTabs": true,
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-jsdoc"],
	"importOrder": [
		"^@helpers/(.*)$",
		"^@routes/(.*)$",
		"^@api/(.*)$",
		"^@components",
		"^@contexts",
		"^@utils/(.*)$",
		"^@types",
		"^@assets/(.*)$",
		"^(.*)-constants.ts$",
		"^(.*)-types\\.ts$",
		"^[./].*(?<!\\.(less|css))$",
		"\\.(less|css)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"tsdoc": true,
	"jsdocPrintWidth": 80,
	"jsdocCapitalizeDescription": false
}
